                                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                                <Button Style="{StaticResource gridEditButton}" Command="{Binding DataContext.EditContractBindingCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                                    CommandParameter="{Binding ContractBindId}" Visibility="Hidden">
                                                                    <fa:IconImage Icon="Edit" Style="{StaticResource gridButtonIcon}"/>
                                                                </Button>
                                                                <Button Margin="5 0 0 0" Command="{Binding DataContext.DeleteContractBindingCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                                     CommandParameter="{Binding ContractBindId}">
                                                                    <fa:IconImage Icon="TrashCan" Style="{StaticResource gridButtonIcon}" />
                                                                    <Button.Style>
                                                                        <Style  TargetType="Button" BasedOn="{StaticResource gridRemoveButton}">
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding IsCreado}" Value="False">
                                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Button.Style>
                                                                </Button>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>

                                    </Grid>
                                </Grid>


                            </Grid>
                        </Border>
                    </Grid>



                </StackPanel>
                <!-- Superposición del ProgressBar -->
                <Grid Background="#80000000" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}">
                    <ProgressBar IsIndeterminate="True" Width="200" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>

                <!-- Popup para el ListBox -->
                <Popup PlacementTarget="{Binding ElementName=txtCliente}" 
                                               StaysOpen="False" 
                                               IsOpen="{Binding IsPopupOpen}">
                    <Border BorderBrush="#acb0af" BorderThickness="1" Background="White" CornerRadius="5">
                        <ListBox ItemsSource="{Binding ClientsLst}"
                             DisplayMemberPath="Name" 
                             SelectedItem="{Binding SelectedClient}"/>
                    </Border>
                </Popup>
            </Grid>
        </ScrollViewer>


    </Border>
</UserControl>
